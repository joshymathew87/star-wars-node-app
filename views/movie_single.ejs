<!doctype html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>
      <% include partials/header.ejs %>
    <div id="hero-image-single" style="background-image: url('/img/<%= movie.hero_image %>')">
      <h1 id="hero-title"><%= title %></h1>
    </div>
    <div class="content-padding clearfix">
        <div class="poster-wrapper">
            <img class="img-fluid img-thumbnail" src="/img/<%= movie.poster %>">
        </div>
        <div class="description-wrapper">
            <div class="description">
                <h2 class="movie-header">Description</h2>
                <p><%= movie.description %></p>
            </div>
            <div class="main-characters">
                <h2 class="movie-header">Main Characters</h2>
                <ul>
                    <% for( var i = 0; i<movie.main_characters.length; i++) { %>
                        <li><%= movie.main_characters[i] %></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
  </body>
</html>